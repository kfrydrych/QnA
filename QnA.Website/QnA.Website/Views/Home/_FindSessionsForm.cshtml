@model QnA.Application.Audience.Queries.FindSessions.FindSessionsQuery

<form asp-action="FindSessions"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-update="#findSessionResultWrapper"
      data-ajax-success="showFindSessionsResultModal()">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-flex">
        <input asp-for="AccessCode" id="access-code-input" class="form-control" placeholder="Please enter the access code" />
        <input type="submit" id="submit-btn" value="Go!" disabled="disabled" class="btn btn-primary text-white px-4" />
    </div>
    <span asp-validation-for="AccessCode" class="text-danger font-weight-bold"></span>
</form>