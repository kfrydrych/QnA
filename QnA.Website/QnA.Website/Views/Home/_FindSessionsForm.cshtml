@model QnA.Application.Audience.Queries.FindSessions.FindSessionsQuery

<form asp-action="FindSessions"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-update="#findSessionResultWrapper"
      data-ajax-success="showFindSessionsResultModal()">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-flex">
        <input asp-for="AccessCode" class="form-control" placeholder="Please enter the access code" />
        <span asp-validation-for="AccessCode" class="text-danger"></span>
        <input type="submit" value="Go!" class="btn btn-primary text-white px-4" />
    </div>
</form>