@model QnA.Application.Admin.Queries.GetSessions.GetSessionsResult

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="card-title">My Sessions</h4>
                    <p><a asp-action="Create">Create New</a></p>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <p>
                            Showing @Model.Statistics.DisplayCount out of @Model.Statistics.TotalCount
                            | Online: @Model.Statistics.OnlineCount
                            | Offline: @Model.Statistics.OfflineCount
                            | Archived: @Model.Statistics.ArchivedCount
                        </p>
                        <form asp-controller="Sessions" asp-action="Index" class="form-inline mb-3">
                            <select asp-for="@Model.Limit" asp-items="@(new SelectList(Model.LimitOptions))" class="form-control"></select>
                            <input type="submit" class="btn btn-primary ml-1" value="Show" />
                        </form>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Sessions)
                            {
                                <tr id="session-@item.Id-row">
                                    @await Html.PartialAsync("_SessionColumns", item)
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>




    </div>
</div>




